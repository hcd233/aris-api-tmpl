{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GO-BACKEND-TMPL",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "envFile": "${workspaceFolder}/env/api.env",
            "args": ["server", "start", "--host", "0.0.0.0", "--port", "8170"],
        },
        {
            "name": "GO-BACKEND-TMPL-OBJECT-BUCKET-CREATE",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "envFile": "${workspaceFolder}/env/api.env",
            "args": ["object", "bucket", "create"],
        },
        {
            "name": "GO-BACKEND-TMPL-DATABASE-MIGRATE",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "envFile": "${workspaceFolder}/env/api.env",
            "args": ["database", "migrate"],
        }
    ]
}